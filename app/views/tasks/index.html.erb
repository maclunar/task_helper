<h1>Tasks</h2>

<%= link_to 'New task', new_task_path, class: "cta center" %>

<br><br>

<table>
  <tr>
    <th>Title</th>
    <th>Finished?</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.title, task_path(task) %></td>
      <td><%= task.status + ' (' + task.steps_remaining.to_s + ')'%></td>
    </tr>
  <% end %>
</table>

