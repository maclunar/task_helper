<h1>Tasks</h2>

<%= link_to 'New task', new_task_path, class: "cta center" %>

<br><br>

<table>
  <tr>
    <th>Title</th>
    <th>Finished?</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.is_finished? %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Delete', task_path(task), method: :destroy,
                        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

